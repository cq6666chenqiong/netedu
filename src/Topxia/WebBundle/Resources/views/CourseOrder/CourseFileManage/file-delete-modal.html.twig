{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}{{'文件移除'|trans}}{% endblock %}

{% block body %}
	<form id="material-delete-form" class="form-horizontal" method="post" action="{{ path('course_manage_upload_course_delete_files',{id:course.id}) }}" onsubmit="return false">

    <div class="form-group">
      <div class="controls mll">
        <span>{{'文件将从该课程中移除关联'|trans}}</span>
      </div>
      <div class="controls mll mtl">
				<input type="checkbox" name="isDeleteFile" value="1" />
      	{{'同时在我的教学资料中删除相关文件'|trans}}
      </div>
    </div>
    
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

  </form>
{% endblock %}

{% block footer %}
    <button class="btn btn-danger material-delete-form-btn" type="submit" data-toggle="form-submit" data-target="#material-delete-form" data-loading-text="正在删除...">确认</button>
    <script>app.load('course-manage-file/material-delete.js');</script>
{% endblock %}