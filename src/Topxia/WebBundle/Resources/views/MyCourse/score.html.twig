                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="年度" name="year" value="{{ year }}">
                    </div>
                    <button class="btn btn-primary">搜索</button>

                </form>
            </div>
            总学分:{{ totalScore }}
            <table class="table table-striped table-hover">
                <tr><th>课程名</th><th>学分年度</th><th>学分</th><th>备注</th></tr>
                {% for  sc in score  %}
                    {% if(sc.title != null) %}
                        <tr><td>{{ sc.title }}</td><td>{{ sc.year }}</td><td>{{ sc.xuefen }}</td><td>{{ sc.remark }}</td></tr>
                    {% else %}
                        <tr><td>{{ sc.courseName }}</td><td>{{ sc.year }}</td><td>{{ sc.xuefen }}</td><td>{{ sc.remark }}</td></tr>
                    {% endif %}
                {% endfor %}
                {% for  sc in other  %}

                        <tr><td>{{ sc.courseName }}</td><td>{{ sc.year }}</td><td>{{ sc.score }}</td><td>{{ sc.remark }}</td></tr>

                {% endfor %}
            </table>
        </div>
    </div>

